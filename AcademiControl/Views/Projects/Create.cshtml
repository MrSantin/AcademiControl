@model AcademiControl.Models.Project

@{
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
    <body>

    <h4>Cadastrando Novo Projeto</h4>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br />

            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-danger" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <button class="btn btn-danger">
                                <a asp-action="Index" class="text-white">Voltar</a>
                            </button>
                        </div>
                    </td>
                </tr>
            </table>
            
           

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
