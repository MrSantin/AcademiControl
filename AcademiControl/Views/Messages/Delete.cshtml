@model AcademiControl.Models.Message

@{
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
    <body>

<div>
    <h4> Deletando Mensagens</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
            <div>
                <table>
                    <tr>
                        <td>
                            <div>
                                <input type="submit" value="Excluir" class="btn btn-warning " />
                            </div>

                        </td>
                        <td>
                            <div>
                                <button class="btn btn-warning ">
                                    <a asp-action="Index" class="text-white">Voltar</a>
                                </button>
                            </div>

                        </td>
                    </tr>
                </table>
            </div>
    </form>
</div>
</body>
</html>
