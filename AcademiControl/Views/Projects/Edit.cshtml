@model AcademiControl.Models.Project

@{
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit</title>
    </head>
    <body>

    <h4>Editando Projeto</h4>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectOwner" class="control-label"></label>
                <input asp-for="ProjectOwner" class="form-control" />
                <span asp-validation-for="ProjectOwner" class="text-danger"></span>
            </div>
           

            <table>
                    <tr>
                        <td>
                            <div class="form-group">
                                <input type="submit" value="Salvar" class="btn btn-danger" />
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <button class="btn btn-danger">
                                    <a asp-action="Index" class="text-white">Voltar</a>
                                </button>
                            </div>
                        </td>
                    </tr>
             </table>

            </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
